<%- include('header') %>

<div class="item item3 main">
    <div class="container admin signup-admin signup-verification">
      <br/><br/><br/>
        <h2>Sign up Verification</h2>
        <br/> 
        <h3 style="color: #17252A">
          <% if(msg != ''){ %>
            <%= msg %>
          <% } %> 
        </h3>
       
        
        <br/>
        
          <form action="/signupcustomer" method="post" role="form">
            <label for="otp">Please Enter One Time Password (OTP) sent to your Email</label><br/>
            <input name="otp" type="otp" placeholder="Enter OTP....."/><br/><br/>
            <label for="password">Password</label><br/>
            <input name="password" type="password" placeholder="Create a Password..."  /><br/><br/>
            <label for="cnfpassword">Confirm Password</label><br/>
            <input name="cnfpassword" type="password" placeholder="Confirm Your Password..." /><br/><br/>              
  
            <button id="send-message" type="submit">Activate Account</button> 
          </form>
  
      
        
        
        
    </div>
    
      

  

  
    
 

</div>

<%- include('footer') %>




